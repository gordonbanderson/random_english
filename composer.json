{
    "name": "suilven/random-english",
    "type": "library",
    "description": "Generate random plausible English, for testing search engines",
    "license": "MIT",
    "authors": [
        {
            "name": "Gordon Anderson",
            "email": "gordon.b.anderson@gmail.com"
        }
    ],

    "autoload": {
        "psr-4": {
            "Suilven\\RandomEnglish\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Suilven\\RandomEnglish\\": "tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.2@dev",
        "phpstan/phpstan": "^0.12.0@dev",
        "clue/graph-composer": "dev-master",
        "ergebnis/composer-normalize": "dev-master",
        "squizlabs/php_codesniffer": "^3.0@dev",
        "vimeo/psalm": "^3.0@dev"
    },
    "require": {
        "camspiers/porter-stemmer": "dev-master"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "checkpsr2": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fixpsr2": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "phpstan": "vendor/bin/phpstan analyse --level=3 -c tests/phpstan.neon src/",
        "psalm" : "vendor/bin/psalm --show-info=true",
        "test": "vendor/bin/phpunit tests"
    }
}
